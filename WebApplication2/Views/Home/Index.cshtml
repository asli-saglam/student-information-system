@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-primary">Okul Yönetim Sistemi</h1>
        <p class="text-muted">Yönetim işlemlerinizi buradan gerçekleştirebilirsiniz</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <div class="d-grid gap-3">
                        <a asp-controller="Fakulte" asp-action="Create" class="btn btn-outline-primary btn-lg">
                            Fakülte Ekle
                        </a>
                        <a asp-controller="Bolum" asp-action="Create" class="btn btn-outline-secondary btn-lg">
                            Bölüm Ekle
                        </a>
                        <a asp-controller="Ogrenci" asp-action="Create" class="btn btn-outline-success btn-lg">
                            Öğrenci Ekle
                        </a>
                        <a asp-controller="Ogrenci" asp-action="OgrenciDersListesi" class="btn btn-outline-warning btn-lg">
                             Öğrenci Sorgula
                        </a>
                        <a asp-controller="Ogrenci" asp-action="OgrenciDersListesi" class="btn btn-outline-info btn-lg">
                            Öğrenci Sorgula (Web Servisi ile)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
