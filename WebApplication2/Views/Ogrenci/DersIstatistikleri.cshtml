@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Ders İstatistikleri";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="DersIstatistikleri" method="get" class="mt-4">
        <div class="row">
            <div class="col-md-3">
                <input type="text" name="yil" class="form-control" placeholder="Yıl (Örn: 2023-2024)" />
            </div>
            <div class="col-md-3">
                <select name="yariyil" class="form-control">
                    <option value="Güz">Güz</option>
                    <option value="Bahar">Bahar</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-lg btn-primary w-100">
                    <i class="fas fa-filter me-2"></i> Filtrele
                </button>
            </div>
        </div>
    </form>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Ders Adı</th>
                    <th>Öğrenci Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DersAd</td>
                        <td>@item.OgrenciSayisi</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}
