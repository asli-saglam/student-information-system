@model IEnumerable<Ogrenci>

@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fas fa-users"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Yeni Öğrenci
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-4 d-flex align-items-center justify-content-between">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th class="text-center">Öğrenci No</th>
                    <th class="text-center">Ad Soyad</th>
                    <th class="text-center">Bölüm</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.OgrenciID</td>
                        <td class="text-center">@item.Ad @item.Soyad</td>
                        <td class="text-center">@item.Bolum?.BolumAd</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.OgrenciID"
                                   class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.OgrenciID"
                                   class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Detaylar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.OgrenciID"
                                   class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }

        .btn-group .btn {
            margin-right: 5px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table th {
            text-align: center;
        }

        .table td {
            text-align: center;
        }

        .alert {
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .table th, .table td {
            border-top: 1px solid #dee2e6;
        }

        .btn-group .btn:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }
    </style>
}
