@model Ogrenci

@{
    ViewData["Title"] = "Öğrenci Düzenle";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-user-edit"></i> @ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="OgrenciID" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Ad" class="form-label"></label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Soyad" class="form-label"></label>
                    <input asp-for="Soyad" class="form-control" />
                    <span asp-validation-for="Soyad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BolumID" class="form-label"></label>
                    <select asp-for="BolumID" class="form-select" asp-items="ViewBag.Bolumler">
                        <option value="">-- Bölüm Seçin --</option>
                    </select>
                    <span asp-validation-for="BolumID" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

