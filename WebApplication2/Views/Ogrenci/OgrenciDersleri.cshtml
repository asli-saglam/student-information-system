@model Ogrenci

<h2 class="fw-bold mb-4">@Model.Ad @Model.Soyad - Aldığı Dersler</h2>
<hr />

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Ders Adı</th>
                <th>Yıl</th>
                <th>Yarıyıl</th>
                <th>Vize</th>
                <th>Final</th>
                <th>Ortalama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var od in Model.OgrenciDersler)
            {
                <tr>
                    <td>@od.Ders.DersAd</td>
                    <td>@od.Yil</td>
                    <td>@od.Yariyil</td>
                    <td>@od.Vize</td>
                    <td>@od.Final</td>
                    <td>
                        @if (od.Vize.HasValue && od.Final.HasValue)
                        {
                            <span>@((od.Vize * 0.4 + od.Final * 0.6)?.ToString("0.00"))</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table th {
            text-align: center;
        }

        .table td {
            text-align: center;
        }

        .btn {
            font-weight: bold;
            display: inline-flex;
            align-items: center;
        }

            .btn i {
                margin-right: 5px;
            }
    </style>
}
