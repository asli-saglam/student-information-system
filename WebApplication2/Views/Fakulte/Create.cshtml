@model Fakulte

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="FakulteAd" class="form-label">Fakülte Ekle</label>
                        <input asp-for="FakulteAd" class="form-control" placeholder="Fakülte adı girin" />
                        <span asp-validation-for="FakulteAd" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}