@model Bolum

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h2 class="mb-0"> Yeni Bölüm Ekle</h2>
                    <p class="mb-0 small">Lütfen aşağıdaki bilgileri eksiksiz doldurun</p>
                </div>
                <div class="card-body px-4 py-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="FakulteID" class="form-label fw-semibold text-primary">Fakülte Seçin</label>
                            <select asp-for="FakulteID" class="form-select" asp-items="ViewBag.FakulteID">
                                <option value="">-- Fakülte Seçin --</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BolumAd" class="form-label fw-semibold text-primary">Bölüm Adı</label>
                            <input asp-for="BolumAd" class="form-control" placeholder="Örn: Elektrik-Elektronik Mühendisliği" />
                            <span asp-validation-for="BolumAd" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                İptal
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                 Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
