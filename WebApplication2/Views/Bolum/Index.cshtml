@model IEnumerable<Bolum>

@{
    ViewData["Title"] = "Bölüm Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-building-columns me-2"></i>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm px-4">
            <i class="fas fa-plus me-2"></i>Yeni Bölüm
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>Henüz kayıtlı bölüm bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 align-middle">
                        <thead class="table-primary text-center">
                            <tr>
                                <th scope="col">Bölüm Kodu</th>
                                <th scope="col">Bölüm Adı</th>
                                <th scope="col">Fakülte</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.BolumID</td>
                                    <td>@item.BolumAd</td>
                                    <td>@item.Fakulte?.FakulteAd</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.BolumID" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.BolumID" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BolumID" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
