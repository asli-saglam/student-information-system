@model Bolum

@{
    ViewData["Title"] = "Bölüm Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-warning text-white text-center rounded-top-4">
                    <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Bölüm Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="BolumID" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="BolumAd" class="form-label fw-bold text-dark">Bölüm Adı</label>
                            <input asp-for="BolumAd" class="form-control" placeholder="Örn: Elektrik-Elektronik Mühendisliği" />
                            <span asp-validation-for="BolumAd" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FakulteID" class="form-label fw-bold text-dark">Fakülte</label>
                            <select asp-for="FakulteID" class="form-select" asp-items="ViewBag.Fakulteler">
                                <option value="">-- Fakülte Seçin --</option>
                            </select>
                            <span asp-validation-for="FakulteID" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save"></i> Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
