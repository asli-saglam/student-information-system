<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Okul Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Okul Yönetim Sistemi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Fakulte" asp-action="Index">Fakülte Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Bolum" asp-action="Index">Bölüm Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Ogrenci" asp-action="Index">Öğrenci Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Ders" asp-action="Index">Ders Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="DersAtama" asp-action="Index">Ders Atama</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Ogrenci" asp-action="OgrenciDersListesi">
                                <i class="fas fa-list"></i> Öğrenci Ders Listesi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Ders" asp-action="DersIstatistikleri">
                                <i class="fas fa-chart-pie"></i> Ders İstatistikleri
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
